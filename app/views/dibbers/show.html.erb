<div class="row">
  <p>
    <h1 id="dib_name">
      <%= @dibber.name %>
    </h1>
  </p>
</div>
<hr/>

<div class="row">
  <div class="me center">
    <%= gravatar_for @dibber, size: 200 %>
    <hr/>
  </div>
</div>

<% @dibber.dibs.order(updated_at: :desc).each do |dib| %>
  <div class="row">
    <div class="col-lg-4 well col-lg-offset-4 all-white">
      <h4><%= link_to dib.name, dib_path(dib) %> </h4>
      <p><%= dib.note %></p>
      <p>
        <span class="quiet"><small>Called <%= time_ago_in_words(dib.created_at) %> ago</small></span>

        <span class="quiet pull-right"><small>Updated <%= time_ago_in_words(dib.updated_at) %> ago</small></span>
      </p>
    </div>
  </div>
<% end %>
<hr>
<center><%= link_to "Go back to dibs", dibs_path, class: "btn btn-lg btn-success viewer"%></center>
<br>
<center><%= link_to "Go back to dibbers", dibbers_path, class: "btn btn-lg btn-success viewer"%></center>
<% if logged_in? && @dibber == current_user %>
<br>
  <center><%= link_to "Edit Yo self", edit_dibber_path(@dibber), class: "btn btn-lg btn-warning viewer"%></center>
<% end %>
<% if current_user.super_admin == true %>
<br>
  <center><%= link_to "Edit This Dibber", edit_dibber_path(@dibber), class: "btn btn-lg btn-warning viewer"%></center>
<% end %>
